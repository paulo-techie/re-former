<%= form_for @user do |f| %>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  Username: <%= f.text_field :username %>
  Email: <%= f.text_field :email %>
  Password: <%= f.text_field :password %>
  <%= f.submit "Submit" %>
<% end %>